<?php

class MMembershipLevel extends ActiveRecord
{

	public function tableName()
	{
		return 'm_membership_level';
	}

	public function rules()
	{
		return array(
			array('level, id_client, updated_by, updated_date, urutan', 'required'),
			array('id_client, scale_points, birthday_points, period, start_points, minimum_points, updated_by, is_default, add_to_nonmember, points_period, urutan', 'numerical', 'integerOnly'=>true),
			array('level', 'length', 'max'=>256),
			array('disc, price', 'safe'),
		);
	}

	public function relations()
	{
		return array(
			'updatedBy' => array(self::BELONGS_TO, 'User', 'updated_by'),
			'idClient' => array(self::BELONGS_TO, 'MClient', 'id_client'),
			'mMembershipCustomers' => array(self::HAS_MANY, 'MMembershipCustomer', 'id_membership'),
			'tCustomerPoins' => array(self::HAS_MANY, 'TCustomerPoin', 'id_membership_level'),
		);
	}

	public function attributeLabels()
	{
		return array(
			'id' => 'ID',
			'level' => 'Level',
			'id_client' => 'Id Client',
			'disc' => 'Disc',
			'scale_points' => 'Scale Points',
			'birthday_points' => 'Birthday Points',
			'period' => 'Period',
			'start_points' => 'Start Points',
			'minimum_points' => 'Minimum Points',
			'price' => 'Price',
			'updated_by' => 'Updated By',
			'updated_date' => 'Updated Date',
			'is_default' => 'Is Default',
			'add_to_nonmember' => 'Add To Nonmember',
			'points_period' => 'Points Period',
			'urutan' => 'Urutan',
		);
	}

}
