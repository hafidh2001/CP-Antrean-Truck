<?php

class MClientHasNotifRules extends ActiveRecord
{

	public function tableName()
	{
		return 'm_client_has_notif_rules';
	}

	public function rules()
	{
		return array(
			array('id_notif_type, id_client, remind_before_days, clear_after_days, repeat_per_days, critical_push', 'required'),
			array('id_notif_type, id_client, remind_before_days, clear_after_days, repeat_per_days, critical_push', 'numerical', 'integerOnly'=>true),
			array('msg_i_tmp, msg_ii_tmp, msg_iii_tmp, is_repeat', 'safe'),
		);
	}

	public function relations()
	{
		return array(
			'idClient' => array(self::BELONGS_TO, 'MClient', 'id_client'),
			'idNotifType' => array(self::BELONGS_TO, 'MNotifType', 'id_notif_type'),
		);
	}

	public function attributeLabels()
	{
		return array(
			'id' => 'ID',
			'id_notif_type' => 'Id Notif Type',
			'id_client' => 'Id Client',
			'remind_before_days' => 'Remind Before Days',
			'clear_after_days' => 'Clear After Days',
			'repeat_per_days' => 'Repeat Per Days',
			'critical_push' => 'Critical Push',
			'msg_i_tmp' => 'Msg I Tmp',
			'msg_ii_tmp' => 'Msg Ii Tmp',
			'msg_iii_tmp' => 'Msg Iii Tmp',
			'is_repeat' => 'Is Repeat',
		);
	}

}
