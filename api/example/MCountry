<?php

class MCountry extends ActiveRecord
{

	public function tableName()
	{
		return 'm_country';
	}

	public function rules()
	{
		return array(
			array('code, name', 'required'),
			array('code, name', 'length', 'max'=>256),
		);
	}

	public function relations()
	{
		return array(
			'mProvinces' => array(self::HAS_MANY, 'MProvince', 'id_country'),
		);
	}

	public function attributeLabels()
	{
		return array(
			'id' => 'ID',
			'code' => 'Code',
			'name' => 'Name',
		);
	}

}
